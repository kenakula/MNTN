mixin picture(props)
  - const {path, image, format, width, height, altText} = props;

  picture
    source(type='image/webp', srcset=`img/${path}/${image}.webp 1x, img/${path}/${image}@2x.webp 2x`)
    img(src= `img/${path}/${image}.${format}`,
    srcset= `img/${path}/${image}@2x.${format} 2x`,
    width= width,
    height= height,
    alt= altText,
    loading="lazy")
